body {
	height: 100vh;
	font-family: '微软雅黑', sans-serif;
	margin: 0;
	background-color: #4A374A;

	display: flex;
	justify-content: center;
	align-items: center;
}

.login {
	width: 300px;
	color: #fff;
	text-align: center;
}

.login > h1 {
	text-shadow: 1px 1px 2px #fff, 0 0 1em #fff, 0 0 0.2em #fff;
}

.login > form {
	overflow: hidden;
}

input {
	width: 100%;
	/* height: 18px; */
	margin-bottom: 10px;
	padding: 15px 10px;
	font-size: .8rem;
	color: #fff;
	border: none;
	outline: none;
	border-radius: 4px;
	background-color: #2D2D3F;
}

.btn {
	width: 100%;
	display: block;
	background-color: #4a77d4;
	color: #fff;
	padding: 10px;
	border: none;
	font-size: 1.2rem;
	line-height: normal;
	border-radius: 5px;
}