.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}
.sider {
  width: 256px;
  min-width: 256px;
  min-height: 100vh;
  background: #001529;
  box-shadow: 2px 0 6px rgba(0, 21, 41, 0.35);
}
.logo {
  color: #fff;
  font-size: 1.5rem;
  padding: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.logo .img-logo {
  height: 50px;
  margin-right: 10px;
}
.logo span {
  text-shadow: 1px 1px 2px #fff, 0 0 1em #fff, 0 0 0.2em #fff;
}
.sider-menu {
  color: #9e9e9e;
  text-align: center;
}
.sider-menu ul {
  padding: 0;
}
.sider-menu li {
  list-style: none;
  line-height: 3;
}
.sider-menu a {
  color: #9e9e9e;
  margin-left: 10px;
}
.sider-menu li:hover,
.sider-menu li.active {
  color: #fff;
}
.sider-menu li:hover a,
.sider-menu li.active a {
  color: #fff;
}
.sider-menu li:hover {
  cursor: pointer;
}
.sider-menu li.active {
  cursor: default;
  background-color: #0069d9;
}
